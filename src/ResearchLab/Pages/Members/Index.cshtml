@model ResearchLab.Pages.Members.IndexModel


@{
    ViewData["Title"] = "Index";
}

<h1>Members</h1>
 <form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> 
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>
 
        



<p>
    <a asp-page="Create">Add New Member</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Members[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Members[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Members[0].WebPage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Members[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Members[0].Cv)
            </th>
            <th>@Html.DisplayNameFor(model => model.Members[0].Category)
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Members)
        {
           {
                
            }
            <tr>
                <td>
                    @Html.DisplayFor(modelitem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.WebPage)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Cv)
                </td>
                <td>
                    @Html.DisplayFor(modelitem =>  item.Category.CategoryName)
                </td>
                <td>
                    <a asp-page="./edit" asp-route-id="@item.Id">edit</a> |
                    <a asp-page="./details" asp-route-id="@item.Id">details</a> |
                    <a asp-page="./delete" asp-route-id="@item.Id">delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = !Model.Members.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Members.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   
   asp-route-pageIndex="@(Model.Members.PageIndex - 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-pageIndex="@(Model.Members.PageIndex + 1)"
   asp-route-currentFilter="@Model.CurrentFilter"
   class="btn btn-primary @nextDisabled">
    Next
</a>