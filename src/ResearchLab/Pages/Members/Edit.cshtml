@page
@model ResearchLab.Pages.Members.EditModel


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Member.FirstName" class="control-label"></label>
                <input asp-for="Member.FirstName" class="form-control" />
                <span asp-validation-for="Member.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.LastName" class="control-label"></label>
                <input asp-for="Member.LastName" class="form-control" />
                <span asp-validation-for="Member.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.WebPage" class="control-label"></label>
                <input asp-for="Member.WebPage" class="form-control" />
                <span asp-validation-for="Member.WebPage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Email" class="control-label"></label>
                <input asp-for="Member.Email" class="form-control" />
                <span asp-validation-for="Member.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Member.Cv" class="control-label"></label>
                <input asp-for="Member.Cv" class="form-control" />
                <span asp-validation-for="Member.Cv" class="text-danger"></span>
            </div>
                <div class="form-group">
                <label asp-for="Member.CategoryId" class="control-label"></label>
                <select asp-for="Member.CategoryId" asp-items="@Model.CategoriesOptions" class="form-control">
                    <option value="">Choose a Category</option>
                </select>
            </div>
            <input type="hidden" asp-for="Member.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
