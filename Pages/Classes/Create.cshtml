@page
@model ResearchLab.Pages.Classes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LabClasses</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LabClasses.ClassName" class="control-label"></label>
                <input asp-for="LabClasses.ClassName" class="form-control" />
                <span asp-validation-for="LabClasses.ClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LabClasses.Description" class="control-label"></label>
                <input asp-for="LabClasses.Description" class="form-control" />
                <span asp-validation-for="LabClasses.Description" class="text-danger"></span>
            </div>
          
               <div class="form-group">
                <label asp-for="LabClasses.Member" class="control-label"></label>
                <select asp-for="LabClasses.Member.FirstName" asp-items="@Model.AvailableMembers" class="form-control">
                    <option value="">Choose a Member</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="LabClasses.LabType" class="control-label"></label>
                <input asp-for="LabClasses.LabType" class="form-control" />
                <span asp-validation-for="LabClasses.LabType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LabClasses.YearTaught" class="control-label"></label>
                <input asp-for="LabClasses.YearTaught" class="form-control" />
                <span asp-validation-for="LabClasses.YearTaught" class="text-danger"></span>
            </div>
    
               <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
